<% layout('layouts/boilerplate') %>

<h1>show</h1>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text text-truncate"><%= post.body %></p>
            </div>
        </div>
    </div>

    <div class="col-6">
        <h2>Leave a Comments</h2>
        <form action="/stc/hulpvraag/<%= post._id %>/comments" method="POST" class="mb-3 needs-validation">
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="comments[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Comments</label>
                <textarea class="form-control" name="comments[body]" id="body" cols="30" rows="3" required></textarea>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>

    </div>
</div>